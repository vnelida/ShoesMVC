@model IPagedList<Color>
@using X.PagedList
@using X.PagedList.Mvc.Core;
@{
	ViewData["Tittle"] = "Colors List";
}
@if (TempData["success"] != null)
{
	var msg = TempData["success"]?.ToString();
	<div class="alert alert-info alert-dismissible fade show w-50" role="alert">
		<strong>Done!</strong> @msg.
		<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
	</div>
}
<div class="row w-50 mb-4">
	<div class="col-6">
		<h3>Colors List</h3>
	</div>
	<div class="col-6 text-end">
		<a asp-controller="Colors" asp-action="UpSert" class="btn btn-primary">
			<i class="bi bi-plus-circle"></i> New
		</a>
	</div>
</div>

<table class="table table-bordered table-hover w-50">
	<thead>
		<tr>
			<th>Color Name</th>
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
		@if (Model.Any())
		{
			@foreach (var item in Model)
			{
				<tr>
					<td>@item.ColorName</td>
					<td>
						<a asp-controller="Colors" asp-action="Delete" asp-route-id="@item.ColorId" class="btn btn-danger"><i class="bi bi-trash"></i>Delete</a>
						<a asp-controller="Colors" asp-action="UpSert" asp-route-id="@item.ColorId" class="btn btn-warning"><i class="bi bi-pencil-square"></i> Edit</a>
					</td>
				</tr>
			}
		
		}
		else
		{
			<tr>
				<td colspan="2">No items added yet</td>
			</tr>
		}

		
	</tbody>
</table>
  <div>
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page }), new PagedListRenderOptions
           {
               UlElementClasses = new[] { "pagination" },
               LiElementClasses = new[] { "page-item" },
               PageClasses = new[] { "page-link" },
               DisplayLinkToIndividualPages = true,
               DisplayPageCountAndCurrentLocation = false,
               MaximumPageNumbersToDisplay = 10
           })
  </div>
